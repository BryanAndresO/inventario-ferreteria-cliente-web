@model inventario_ferreteria_cliente.Models.ArticuloViewModel

@{
    ViewData["Title"] = "Detalles del Artículo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center mb-4">Detalles del Artículo</h1>

<div class="container mt-4">
    <table class="table table-bordered">
        <tr>
            <th>Código</th>
            <td>@Model.Codigo</td>
        </tr>
        <tr>
            <th>Nombre</th>
            <td>@Model.Nombre</td>
        </tr>
        <tr>
            <th>Categoría</th>
            <td>@Model.Categoria</td>
        </tr>
        <tr>
            <th>Proveedor</th>
            <td>@Model.Proveedor</td>
        </tr>
        <tr>
            <th>Precio Compra</th>
            <td>@Model.Preciocompra</td>
        </tr>
        <tr>
            <th>Precio Venta</th>
            <td>@Model.Precioventa</td>
        </tr>
        <tr>
            <th>Stock</th>
            <td>@Model.Stock</td>
        </tr>
        <tr>
            <th>Stock Mínimo</th>
            <td>@Model.Stockminimo</td>
        </tr>
    </table>

    <a asp-action="Buscar" class="btn btn-secondary">Volver a Buscar</a>
</div>
