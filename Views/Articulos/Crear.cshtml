@model inventario_ferreteria_cliente.Models.ArticuloViewModel

@{
    ViewData["Title"] = "Registrar Artículo";
    Layout = "~/Views/Shared/_Layout.cshtml";
    }

<h1 class="text-center mb-4">Registrar Artículo</h1>

<form asp-action="Crear" method="post" class="container mt-4">
    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="Codigo" class="form-label"></label>
            <input asp-for="Codigo" class="form-control" />
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Nombre" class="form-label"></label>
            <input asp-for="Nombre" class="form-control" />
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Categoria" class="form-label"></label>
            <input asp-for="Categoria" class="form-control" />
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Proveedor" class="form-label"></label>
            <input asp-for="Proveedor" class="form-control" />
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Preciocompra" class="form-label"></label>
            <input asp-for="Preciocompra" class="form-control" type="number" step="0.01" />
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Precioventa" class="form-label"></label>
            <input asp-for="Precioventa" class="form-control" type="number" step="0.01" />
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Stock" class="form-label"></label>
            <input asp-for="Stock" class="form-control" type="number" />
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Stockminimo" class="form-label"></label>
            <input asp-for="Stockminimo" class="form-control" type="number" />
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-success">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
